@model List<ConnectSample.ViewModels.TripDigestViewModel>

@{
	ViewBag.Title = "Your upcoming trip list";
}

@if (Model.Count == 0)
{
	<h3>You have no upcoming trips. </h3>
	<h4>Verify that your account is linked to Concur.</h4>
	<br />
	<br />
	<br />
	<text>When you're safe at home you wish you were having an adventure; when you're having an adventure you wish you were safe at home. - <i> Thronton Wilder </i></text>
}
else
{ 
	<h3>Your upcoming trip list:</h3>
	<p>
		<table class="triplist">
			<thead>
				<tr>
					<th class="triplist" scope="col">Trip Name</th>
					<th class="triplist" scope="col">Description</th>
					<th class="triplist" scope="col">Start Date</th>
					<th class="triplist" scope="col">End Date</th>
					<th class="triplist" scope="col"></th>
				</tr>
				</thead>
		@foreach (ConnectSample.ViewModels.TripDigestViewModel trip in Model)
		{ 
			<tr>
				<td class="triplist"><div class="tripname">@trip.TripName </div></td>
				<td class="triplist"><div class="tripdescription">@trip.Description</div></td>
				<td class="triplist">@trip.StartDateLocal.ToShortDateString()</td>
				<td class="triplist">@trip.EndDateLocal.ToShortDateString()</td>
				<td class="triplist">@Html.ActionLink("View Local Info for the trip", "Index", "Trip",  new {Id=trip.TripId }, null)</td>
			</tr>
		}
		</table>
	</p>
	<br />
	<br />
	<text>
		You can never go home again, but the truth is you can never leave home, so it's all right. -  <i>Maya Angelou</i>
	</text>
}

